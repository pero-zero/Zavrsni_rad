@model ServisProjekt.Models.Poduzeće

<div class="text-center">
    <h3>Jeste li sigurni da želite pobrisati ovo poduzeće?</h3>
    <h4>Oprez briše se <span style="color:red">SVE</span> vezano za ovo poduzeće</h4>
</div>
<div>
    <h4>Poduzeće</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PoduzećeID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PoduzećeID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Naziv)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Naziv)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Adresa)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Adresa)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Grad)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Grad)
        </dd>
    </dl>

    <form asp-action="DeletePoduzećeConfirmed">
        <input type="hidden" asp-for="PoduzećeID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="PopisPoduzeća">Nazad</a>
    </form>
</div>
