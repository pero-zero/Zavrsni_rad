@model ServisProjekt.Models.Poduzeće
@{
    ViewData["Title"] = "Uredi poduzeće";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <form method="post">
        <input asp-for="PoduzećeID" value="@Model.PoduzećeID" hidden />
        <div class="form-group">
            <label asp-for="Naziv"></label>
            <input asp-for="Naziv" value="@Model.Naziv" class="form-control" />
            <span asp-validation-for="Naziv" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Adresa"></label>
            <input asp-for="Adresa" value="@Model.Adresa" class="form-control" />
            <span asp-validation-for="Adresa" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Grad"></label>
            <input asp-for="Grad" value="@Model.Grad" class="form-control" />
            <span asp-validation-for="Grad" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-default">Uredi</button>
        <a asp-action="PopisPoduzeća">Nazad</a>
    </form>
</div>